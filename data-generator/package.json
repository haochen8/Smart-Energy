{
  "name": "data-generator",
  "version": "1.0.0",
  "private": true,
  "description": "TypeScript microservice for generating and streaming data",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "start:batch": "ts-node src/index.ts --batch",
    "start:stream": "ts-node src/index.ts --interval=3600",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "fast-csv": "^4.3.6",
    "kafkajs": "^2.2.4",
    "pino": "^9.1.0",
    "redis": "^5.10.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
